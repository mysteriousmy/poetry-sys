.banner-item-images {
    width: 100%;
    height: 100%;
}

.banner {
    width: 100%;
    height: auto;
}

.banner_cover {
    position: absolute;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.2);
}

.banner_cover text {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    color: white;
    font-size: 25px;
    height: auto;
}

.head_img {
    width: 100%;
}

.head_img image {
    width: 100%;
    height: 300px;
}

.title {
    display: flex;
    flex-direction: column;
}

.title text {
    
    margin-top: 20px;
}
.poems{
    padding: 20px;
    margin-top: 15px;
    box-shadow: 0 2px 4px -1px rgb(0 0 0 / 20%), 0 4px 5px 0 rgb(0 0 0 / 14%), 0 1px 10px 0 rgb(0 0 0 / 12%);
}
.poem_content{
    font-weight: 300;
    font-size: 13px;
    color: rgba(0, 0, 0, 0.7);
    display: -webkit-box;
    -webkit-line-clamp: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
    word-break: break-all;
    margin-top: 20px;
}
.home_tool {
    background-color: #ffffff;
    border-radius: 6px;
    width: 90%;
    height: auto;
    margin: 0 auto;
    box-shadow: 0 2px 4px -1px rgb(0 0 0 / 20%), 0 4px 5px 0 rgb(0 0 0 / 14%), 0 1px 10px 0 rgb(0 0 0 / 12%);
    /*设置图片和文字垂直居中对齐*/
    display: flex;
    padding-top: 10px;
    padding-bottom: 30px;
    flex-direction: row;
    justify-content: space-around;
    margin-bottom: 30px;
    margin-top: 30px;
}

.tool {
    display: inline-flex;
    flex-direction: column;
    text-align: center;
}

.uni_content {
    background-color: #ffffff;
    border-radius: 6px;
    width: 81%;
    height: auto;
    margin: 0 auto;
    box-shadow: 0 2px 4px -1px rgb(0 0 0 / 20%), 0 4px 5px 0 rgb(0 0 0 / 14%), 0 1px 10px 0 rgb(0 0 0 / 12%);
    display: flex;
    padding: 20px;
    padding-bottom: 30px;
    flex-direction: column;
    margin-bottom: 30px;
    margin-top: 30px;
}

.uni_content_title {
    display: inline-flex;
    flex-direction: row;
    align-items: center;
}
.modal {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 9;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    height: 100vh;
    overflow: hidden;
    background-color: rgba(0, 0, 0, 0.2);
    padding-bottom: 40px;
}
.none_data {
    text-align: center;
    height: 40px;
    font-size: 25px;
    color: rgba(0, 0, 0, 0.3);
    background-color: white;
    border-radius: 10px;
    margin-top: 20px;
    width: 100%;
    top: 40%;
}

.search_data {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 9;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    height: 100vh;
    overflow: hidden;
    background-color: rgba(0, 0, 0, 0.2);
    padding-bottom: 40px;
}

.header {
    width: 90%;
    height: 200px;
    background-color: transparent;
    border-radius: 10px;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    margin: 0 auto;
    margin-top: 30px;

}

.header image {
    width: 200px;
    height: 200px;
    border-radius: 50%;
    box-shadow: 0 2px 4px -1px rgb(0 0 0 / 20%), 0 4px 5px 0 rgb(0 0 0 / 14%), 0 1px 10px 0 rgb(0 0 0 / 12%);
}

.text_info {
    width: 80%;
    display: inline-flex;
    flex-direction: row;
    justify-content: space-between;
    margin-top: 20px;
}

.info {
    background-color: #ffffff;
    border-radius: 6px;
    width: 90%;
    margin: 0 auto;
    margin-top: 30px;
    box-shadow: 0 2px 4px -1px rgb(0 0 0 / 20%), 0 4px 5px 0 rgb(0 0 0 / 14%), 0 1px 10px 0 rgb(0 0 0 / 12%);
    height: auto;
    display: flex;
    padding-top: 40px;
    padding-bottom: 100px;
    flex-direction: column;
    align-items: center;
    margin-bottom: 20px;
}

.modal_ath {

    z-index: 9999;
    backdrop-filter: blur(20px);
}

.modal_head {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.scroll_modal {
    height: 75%;
    width: 90%;
    border-radius: 10px;
    background-color: rgba(255, 255, 255, 0.7);
    padding: 10px;
    backdrop-filter: blur(20px);
    box-shadow: 0 2px 4px -1px rgb(0 0 0 / 20%), 0 4px 5px 0 rgb(0 0 0 / 14%), 0 1px 10px 0 rgb(0 0 0 / 12%);
}

.focus {
    width: 60px;
    height: 60px;
    position: fixed;
    bottom: 20px;
    right: 20px;
    border-radius: 50%;
    background-color: pink;
    font-size: 30px;
    display: flex;
    justify-content: center;
    align-items: center;
    color: white;
}

.comment {
    width: 60px;
    height: 60px;
    position: fixed;
    bottom: 100px;
    right: 20px;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;

    background-color: green;
}

.float_edit {
    position: fixed;
    box-shadow: 0 2px 4px -1px rgb(0 0 0 / 20%), 0 4px 5px 0 rgb(0 0 0 / 14%), 0 1px 10px 0 rgb(0 0 0 / 12%);
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    margin: auto;
    width: 300px;
    height: 200px;
    z-index: 9999;
    display: flex;
    flex-direction: column;
    background: white;
    border-radius: 10px;
    padding: 20px;
}

.comment image {
    width: 40px;
    height: 40px;
    display: inline;
}

.modal_content_head {
    padding: 10px;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    margin-top: 20px;
    margin-bottom: 30px;
}

.head_cover {
    height: 100vh;
    width: 100%;
    position: fixed;
    background-color: rgba(0, 0, 0, 0.3);
    z-index: 99999;
    backdrop-filter: blur(20px);
}

.head_cover view {
    font-size: 40px;
    color: white;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    margin: 0 auto;
    z-index: 9999;
}

.modal_content_head image {
    border-radius: 50%;
    width: 80px;
    height: 80px;
    margin-right: 20px;
}

.uni_content_title image {
    width: 35px;
    height: 35px;
    display: inline;

    margin-right: 5px;
}

.tool image {
    width: 60px;
    height: 60px;
    display: inline;
}

.tool text {
    display: inline;
}
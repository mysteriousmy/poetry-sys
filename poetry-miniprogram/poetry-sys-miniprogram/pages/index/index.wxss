/**index.wxss**/
.banner-item-images {
    width: 100%;
    height: 100%;
}

.banner {
    width: 100%;
    height: auto;
}

.banner_cover {
    position: absolute;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.2);
}

.banner_cover text {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    color: white;
    font-size: 20px;
    width: 100%;
    text-align: center;
    height: auto;
}

.home_tool {
    background-color: #ffffff;
    border-radius: 6px;
    width: 90%;
    height: auto;
    margin: 0 auto;
    box-shadow: 0 2px 4px -1px rgb(0 0 0 / 20%), 0 4px 5px 0 rgb(0 0 0 / 14%), 0 1px 10px 0 rgb(0 0 0 / 12%);
    /*设置图片和文字垂直居中对齐*/
    display: flex;
    padding-top: 10px;
    padding-bottom: 30px;
    flex-direction: row;
    justify-content: space-around;
    margin-bottom: 30px;
    margin-top: 30px;
}

.home_dynmic {
    background-color: #ffffff;
    border-radius: 6px;
    width: 81%;
    height: auto;
    margin: 0 auto;
    box-shadow: 0 2px 4px -1px rgb(0 0 0 / 20%), 0 4px 5px 0 rgb(0 0 0 / 14%), 0 1px 10px 0 rgb(0 0 0 / 12%);
    display: flex;
    padding: 20px;
    padding-bottom: 30px;
    flex-direction: column;
    margin-bottom: 30px;
    margin-top: 30px;
}

.dynmic_title {
    display: inline-flex;
    flex-direction: row;
    align-items: center;
}

.dynmic_title image {
    width: 35px;
    height: 35px;
    display: inline;

    margin-right: 5px;
}

.dynmic_content {
    margin-top: 20px;
    width: 100%;
    height: auto;
    border-bottom: 1px solid rgba(0, 0, 0, 0.2);
    display: inline-flex;
    flex-direction: row;
    align-items: center;
    padding-bottom: 20px;
}

.dynmic_content image {
    width: 150px;
    height: 100px;
    box-shadow: 0 2px 4px -1px rgb(0 0 0 / 20%), 0 4px 5px 0 rgb(0 0 0 / 14%), 0 1px 10px 0 rgb(0 0 0 / 12%);
}

.dynmic_content view {
    margin-left: 10px;
    width: 55%;
    display: flex;
    flex-direction: column;
}

.dynmic_content view>text:nth-child(2) {
    display: -webkit-box;
    -webkit-line-clamp: 4;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
    word-break: break-all;
}

.dynmic_content view>text:nth-child(1) {
    font-weight: 900;
    font-size: 20px;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
    word-break: break-all;
}

.none_data {
    text-align: center;
    height: 40px;
    font-size: 25px;
    color: rgba(0, 0, 0, 0.3);
    background-color: white;
    border-radius: 10px;
    margin-top: 20px;
    width: 100%;
    top: 40%;
}

.tool {
    width: 80px;
    height: 80px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
}

.tool image {
    width: 60px;
    height: 60px;
    display: inline;
}

.tool text {
    width: 80px;
}
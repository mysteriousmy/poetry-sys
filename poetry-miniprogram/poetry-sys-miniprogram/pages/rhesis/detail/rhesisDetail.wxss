/* pages/rhesis/detail/rhesisDetail.wxss */
.rhesis{
    width: 90%;
    height: 400px;
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    box-shadow: 0 2px 4px -1px rgb(0 0 0 / 20%), 0 4px 5px 0 rgb(0 0 0 / 14%), 0 1px 10px 0 rgb(0 0 0 / 12%);
}

.rhesis text{
    position: relative;
    right: 30px;
    margin-right: 10px;
    top: 100px;
    font-size: 26px;
    font-weight: 400;
    color: rgba(0, 0, 0, 0.6);
    writing-mode: vertical-rl;
}
.poem_content{
    font-weight: 300;
    font-size: 13px;
    color: rgba(0, 0, 0, 0.7);
    display: -webkit-box;
    -webkit-line-clamp: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
    word-break: break-all;
    margin-top: 20px;
}